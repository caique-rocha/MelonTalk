<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemMessages_linearLayout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/itemMessages_linearLayout_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemMessages_imageView_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/itemMessages_textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:text="MESSAGE"
            android:id="@+id/itemMessages_textView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/itemMessages_textView_timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011.11.11 11:11"
            android:textColor="@android:color/darker_gray"
            android:textSize="9dp" />
    </LinearLayout>
</LinearLayout>